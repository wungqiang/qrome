{
    "version": "1.0.0",
    "manifest_version": 2,
    "name": "Qrome",
    "description": "Front end utilities developed",
    "background": {
        "scripts": ["libs/qrcode.min.js", "js/bg.js", "libs/doT.min.js"],
        "persistence": true
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"

    },
    "browser_action": {
        "default_icon": "icon48.png",
        "default_popup": "popup.html",
        "default_title": "Qrome"
    },
    "content_scripts":[
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["libs/qrcode.min.js", "js/content.js"]
        }
    ],
    "permissions": [
        "tabs",
        "storage",
        "contextMenus",
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": ["js/q.js", "css/sitedir.css"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
